# Environment Variables Template for Midora AI Frontend
# Copy this file to .env.local, .env.dev, or .env.live and customize as needed

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node Environment
NODE_ENV=development

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Application Settings
CUSTOM_KEY=your_custom_key_here
PORT=3000
HOSTNAME=0.0.0.0

# =============================================================================
# BACKEND SERVICE CONFIGURATION
# =============================================================================

# Backend API Configuration
BACKEND_API_URL=http://localhost:8000
BACKEND_API_TIMEOUT=30000
BACKEND_API_RETRY_ATTEMPTS=3

# API Authentication (if needed)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# =============================================================================
# REDIS CONFIGURATION (FOR CACHING)
# =============================================================================

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis URLs
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Third-party API Configuration
EXTERNAL_API_BASE_URL=https://api.external-service.com
EXTERNAL_API_KEY=your_external_api_key_here
EXTERNAL_API_SECRET=your_external_api_secret_here

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# =============================================================================
# SECURITY & MONITORING
# =============================================================================

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info
LOGS_PATH=./logs

# =============================================================================
# FILE STORAGE
# =============================================================================

# File Uploads
UPLOADS_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true
ENABLE_SOURCE_MAPS=true

# Testing
JEST_WATCHMAN=false
JEST_COVERAGE_THRESHOLD=80

# =============================================================================
# PRODUCTION SPECIFIC
# =============================================================================

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# CDN & Static Assets
CDN_URL=https://cdn.yourdomain.com
STATIC_ASSETS_PATH=./public

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# For Local Development (.env.local)
# NODE_ENV=development
# NEXT_PUBLIC_API_URL=http://localhost:8000/api
# NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
# CUSTOM_KEY=local_dev_key
# PORT=3000

# For Development Environment (.env.dev)
# NODE_ENV=development
# NEXT_PUBLIC_API_URL=http://localhost:8000/api
# NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
# CUSTOM_KEY=dev_key_here
# PORT=3001

# For Live Production (.env.live)
# NODE_ENV=production
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_BACKEND_URL=https://api.yourdomain.com
# CUSTOM_KEY=your_production_key_here
# BACKEND_API_URL=https://api.yourdomain.com
